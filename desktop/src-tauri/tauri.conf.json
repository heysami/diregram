{
  "productName": "Diregram Sync",
  "version": "../package.json",
  "identifier": "com.diregram.sync",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Diregram Sync",
        "width": 980,
        "height": 680,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },
  "plugins": {
    "dialog": null,
    "deep-link": {
      "desktop": {
        "schemes": ["diregram"]
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.icns", "icons/icon.png"]
  }
}

